<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    tools:context=".Fragment.ProfileFragment">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <View
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:background="@color/teal_700"/>
        <RelativeLayout
            android:id="@+id/headerTopArea"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/logo"
                android:layout_marginTop="20dp"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginBottom="10dp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/android_logo"/>
            <TextView
                android:id="@+id/profileNameBig"
                android:layout_below="@+id/logo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ruhul Amin"
                android:textStyle="bold"
                android:textColor="#fff"
                android:textSize="30sp"
                android:textAllCaps="true"
                android:textAlignment="center"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/socialInfo"
            android:layout_marginTop="-20dp"
            android:layout_below="@+id/headerTopArea"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_centerInParent="true"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="20dp"
                android:elevation="20dp"
                app:cardElevation="20dp"
                app:cardUseCompatPadding="true"
                android:textAlignment="center">

            </androidx.cardview.widget.CardView>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/socialInfo">
            <LinearLayout
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/profileNameSmall"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Ruhul Amin"
                    android:textColor="@color/teal_700"
                    android:textStyle="bold"
                    android:textSize="25sp"
                    android:drawableLeft="@drawable/ic_email"
                    android:drawablePadding="10dp"
                    android:drawableTint="#009688"/>
                <TextView
                    android:id="@+id/profileNameEmail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ruhul@gmail.com"
                    android:textColor="@color/teal_700"
                    android:textStyle="bold"
                    android:textSize="25sp"
                    android:drawableLeft="@drawable/ic_email"
                    android:drawablePadding="10dp"
                    android:drawableTint="#009688"/>
                <TextView
                    android:id="@+id/profileNameMobile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="01911467325"
                    android:textColor="@color/teal_700"
                    android:textStyle="bold"
                    android:textSize="25sp"
                    android:drawableLeft="@drawable/ic_mobile"
                    android:drawablePadding="10dp"
                    android:drawableTint="#009688"/>
            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>